<p id="notice"><%= notice %></p>

<div class="container">
  <h1 class="d-flex justify-content-center">To do List</h1>

  <div class="row">
    <div class="col-md-12 mb-3 d-flex justify-content-end">
      <%= link_to 'New Task', new_task_path, class:"btn btn-primary" %>
    </div>
    <% @tasks.each do |task| %>
      <div class="col-md-3">
        <div class="card shadow p-3 mb-3 bg-body rounded">
          <div class="card-body">
            <h5 class="card-title"><%= task.title %></h5>
            <p class="card-text task-description"><strong>Task:</strong> <br> <%= task.body %></p>
            <p class="card-text"><strong>Delivery Date:</strong> <%= task.delivery_date %></p>
            <p class="card-text"><strong>Completed:</strong> <%= task.completed %></p>
            <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-warning' %>
            <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <br>
</div>

